{% extends 'GesEnquiryBundle::default_layout.html.twig' %}

{% block body -%}
    <h1>Enquiry Type</h1>
    <div class="btn-group">
        <a href="{{ path('enquirytype') }}" class="btn">
            Back to the list
        </a>
        <a href="{{ path('enquirytype_edit', { 'id': entity.id }) }}" class="btn">
            Edit Enquiry Type
        </a>
    </div><hr>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Sequence</th>
            <td>{{ entity.sequence }}</td>
        </tr>
        </tbody>
    </table>

    <form action="{{ path('enquirytype_delete', { 'id': entity.id }) }}" method="post" onclick="return deleteConfirm();">
        <input type="hidden" name="_method" value="DELETE"/>
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn">Delete</button>
    </form>
{% endblock %}
