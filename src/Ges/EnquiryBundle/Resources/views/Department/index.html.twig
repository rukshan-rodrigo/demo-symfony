{% extends 'GesEnquiryBundle::default_layout.html.twig' %}

{% block body -%}
    <h1>Department list</h1>

    <a href="{{ path('department_new') }}" class="btn">
        Create a new department
    </a>
    <table  class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Sequence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('department_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.sequence }}</td>
                <td><a href="{{ path('department_show', { 'id': entity.id }) }}">View</a> | <a href="{{ path('department_edit', { 'id': entity.id }) }}">Edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
